<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Разделить на слова" Margin="98,110,422,276" Height="NaN" Width="NaN" Click="Button1_Click" RenderTransformOrigin="-0.021,0.404"/>
        <Label Content="Здесь будет предложение в обратном порядке..." HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Width="604" Height="38" Name="outputLabel"/>
        <ListBox d:ItemsSource="{d:SampleData}" Height="NaN" Margin="98,236,98,33" Width="NaN" Name="outputListBox"/>
        <TextBox HorizontalAlignment="Center" Margin="0,24,0,0" TextWrapping="Wrap" Text="Это предложение для примера" VerticalAlignment="Top" Width="604" Height="59" Name="inputTextBox"/>
        <Button Content="Переставить слова" Margin="422,110,98,276" Height="NaN" Width="NaN" Click="Button2_Click" RenderTransformOrigin="-0.021,0.404"/>

    </Grid>
</Window>
